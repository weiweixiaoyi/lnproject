<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:background="@color/toolbar_bg">
        <ImageView
            android:id="@+id/searchpill_backImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/img_back"
            android:layout_centerVertical="true"
            />
        <View
            android:id="@+id/searchpill_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_toRightOf="@id/searchpill_backImg"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            />
        <EditText
            android:id="@+id/searchpill_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/searchpill_divider"
            android:layout_toLeftOf="@+id/searchpill_searchTv"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/search"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:drawableBottom="@drawable/edittext_white_line"
            android:background="@null"
            android:hint="请输入药物名称"
            android:layout_marginLeft="12dp"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/searchpill_searchTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="2dp"
            android:text="搜索"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/searchpill_nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/searchpill_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/searchpill_typeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/searchpill_descTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/searchpill_messageTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
    <WebView
        android:id="@+id/searchpill_webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </WebView>
</LinearLayout>