<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/dialog_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@mipmap/hongbao_setpassword_bg"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="调整喝水目标值"
            android:textSize="21sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="每日喝水健康目标值"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textSize="18sp"
            android:textColor="@color/text_red"
            />
        <EditText
            android:id="@+id/adjust_curr_goalEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="1575"
            android:gravity="center"
            android:background="@null"
            android:enabled="false"
            android:drawableBottom="@drawable/edittext_black_line"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:text="调整为"
            />
        <EditText
            android:id="@+id/adjust_edit_goalEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:background="@null"
            android:text="1575"
            android:gravity="center"
            android:textCursorDrawable="@color/text_red"
            android:drawableBottom="@drawable/edittext_red_line"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/dialog_adjust_remarks"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/adjust_confirmTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:gravity="center"
                android:text="确定"/>
            <TextView
                android:id="@+id/adjust_backTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/adjust_confirmTv"
                android:textColor="@color/text_red"
                android:textSize="15sp"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:text="返回"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>