<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_bg"
    tools:context="com.example.guo.lnproject.activity.MethodActionActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:background="@color/toolbar_bg">
        <ImageView
            android:id="@+id/methoddetail_backImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/img_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/methoddetail_titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/app_name"
            android:layout_toRightOf="@id/methoddetail_backImg"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/methoddetail_clickToActionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看详细步骤"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/toolbar_bg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="重点关注"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/methoddetail_focusTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="方法原理"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/methoddetail_principleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="完成感受"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/methoddetail_feelingTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="方法来源"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/methoddetail_sourceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
